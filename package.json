{
    "name": "pat3.0",
    "private": true,
    "version": "1.0.0",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "start:frontend": "npm run start --workspace pat3.0-frontend",
        "start:backend": "npm run start --workspace pat3.0-backend",
        "start:pat": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
        "lint": "eslint .",
        "format": "prettier --write ."
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "eslint": "^8.57.0",
        "prettier": "^3.2.5"
    }
}
